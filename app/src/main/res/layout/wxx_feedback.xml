<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wxx_11">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dip"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/cll_bg3"
        android:gravity="center"
        android:text="   FeedBack   "
        android:textColor="@color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/cll_bg">

        <TextView
            android:id="@+id/feedback_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="Welcome your valuable Suggestions and opinions, your advice is helpful to improve our service."
            android:textColor="@color/feedback_title"
            android:textSize="19dp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/feedback_type_spinner"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/cll_bg3"
                android:entries="@array/feedback_type"
                android:focusable="true" />
        </LinearLayout>
        <RelativeLayout android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <EditText android:id="@+id/feedback_content"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:maxEms="10"
                android:minEms="10"
                android:hint="Please enter your feedback (100 words)"
                android:gravity="top"
                android:layout_marginBottom="50dip"/>
            <Button android:id="@+id/feedback_submit"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="Submit"
                android:textSize="19dp"
                android:background="@drawable/cll_bg3"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
      </LinearLayout>
    </LinearLayout>
