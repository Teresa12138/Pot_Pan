<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Self Design"
        android:textColor="#fc570a"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/recipename"
        android:text="Recipe name:"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>


    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Recipe name."
        android:textColor="#cec1c1"
        />

    <TextView
        android:id="@+id/textView1"
        android:text="Food material"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <Gallery
        android:id="@+id/galleryM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/textView31"
        android:text="Seasoner"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <Gallery
        android:id="@+id/galleryS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

    <TextView
        android:id="@+id/textView5"
        android:text="Description"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>


    <EditText
        android:layout_height="120dp"
        android:layout_width="match_parent"
        android:text="Recipe name."
        android:textColor="#cec1c1"/>

    <Button
        android:id="@+id/createRecipe"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/cll_bg3"
        android:text="Create!"
        android:textAlignment="center"
        android:textSize="40px"
        android:textStyle="bold" />


</LinearLayout >
