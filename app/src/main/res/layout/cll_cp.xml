<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/cll_bg1"
    android:gravity="center_vertical"
    android:stretchColumns="0,3"
    android:id="@+id/container"
   >


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Register Successfully!"
            android:gravity="center"
            android:textSize="65px"
            android:id="@+id/register"
            android:layout_column="0"
            android:layout_span="4"
            android:textStyle="bold"/>
    </TableRow>
    <TableRow android:layout_marginTop="50px">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to the Pot&amp;Pan World! "
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:textSize="70px"
        android:id="@+id/welcome"
        android:layout_column="0"
        android:layout_span="4"
        android:textStyle="bold"/>
    </TableRow>
    <TableRow android:layout_marginTop="50px">
    <Button
        android:id="@+id/back1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:onClick="onClick1"
        android:text="Back to Login"
        android:textSize="30px"
        android:textStyle="bold"
        android:layout_span="4"
        android:background="@drawable/cll_bg3"/>
    <TextView android:layout_column="4" />
    </TableRow>
</TableLayout>