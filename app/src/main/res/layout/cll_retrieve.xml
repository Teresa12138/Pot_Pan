<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/cll_bg1"
    android:gravity="center_vertical"
    android:stretchColumns="0,3"
    android:id="@+id/container"
  >


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Password Retrieve"
            android:gravity="center"
            android:textSize="70px"
            android:id="@+id/retrieve"
            android:layout_column="0"
            android:layout_span="4"
            android:textStyle="bold|italic"/>
    </TableRow>

    <TableRow android:layout_marginTop="50px">
        <Button
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="onClick1"
            android:text="Send Validate Code"
            android:textSize="40px"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textStyle="bold"
            android:layout_span="4" />
        <TextView android:layout_column="4" />
    </TableRow>
    <TableRow android:layout_marginTop="20px">

        <AutoCompleteTextView
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the validate code"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="20px"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_column="0"
            android:layout_span="4" />


    </TableRow>
    <TableRow android:layout_marginTop="20px">

        <TextView />

        <Button
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="onClick1"
            android:text="Confirm"
            android:textSize="40px"
            android:textStyle="bold" />

        <Button
            android:id="@+id/back3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_marginLeft="50dp"
            android:textSize="40px"
            android:textStyle="bold" />

        <TextView android:layout_column="4" />

    </TableRow>
</TableLayout>