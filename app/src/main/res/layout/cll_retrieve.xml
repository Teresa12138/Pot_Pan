<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/cll_bg1"
    android:gravity="center_vertical"
    android:stretchColumns="0,3"
    android:id="@+id/container"
  >


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Password Retrieve"

            android:gravity="center"
            android:textSize="70px"
            android:id="@+id/retrieve"
            android:layout_column="0"
            android:layout_span="4"
            android:textStyle="bold"/>
    </TableRow>


    <TableRow android:layout_marginTop="20px">

        <AutoCompleteTextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your User Name"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="50px"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:layout_column="0"
            android:layout_span="4"
            android:background="@drawable/cll_bg2"/>


    </TableRow>

    <TableRow android:layout_marginTop="20px">

        <AutoCompleteTextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your E-mail"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="50px"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:layout_column="0"
            android:layout_span="4"
            android:background="@drawable/cll_bg2"/>


    </TableRow>
    <TableRow android:layout_marginTop="70px">

        <TextView />

        <Button
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="onClick1"
            android:text="   Confirm   "
            android:textSize="40px"
            android:textStyle="bold"
            android:background="@drawable/cll_bg3"/>

        <Button
            android:id="@+id/back3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_marginLeft="50dp"
            android:textSize="40px"
            android:textStyle="bold"
            android:background="@drawable/cll_bg3"/>

        <TextView android:layout_column="4" />

    </TableRow>
</TableLayout>